import pytest

from app.calculator import Calculator

class TestCalc:
    def setup(self):
        self.calculator = Calculator

    def test_adding_succsess(self):
        assert self.calculator.adding(self, 1, 1) == 2

    def test_adding_unsuccsess(self):
        assert self.calculator.adding(self, 1, 1) == 3

    def test_zerodivision(self):
        with pytest.raises(ZeroDivisionError):
            self.calculator.division(self,1, 0)

    def test_subtraction_well(self):
        assert self.calculator.subtraction(self, 2, 1) == 1

    def test_division_well(self):
        assert self.calculator.division(self, 3, 1) == 3

    def test_adding_well(self):
        assert self.calculator.adding(self, 5, 3) == 8

    def test_multiply_well(self):
        assert self.calculator.multiply(self, 4, 3) == 12

    def teardown(self):
        print('Выполнение метода Teardown')
